@model IEnumerable<Controller_Action.Models.Product>

@{
    ViewBag.Title = "SearchProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchProduct</h2>
@using (Html.BeginForm("SearchProduct", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        Product Name:
        @Html.TextBox("ProductName", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Search" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Product Details", "ProductDetail", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>
