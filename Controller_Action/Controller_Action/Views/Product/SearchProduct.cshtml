@model IEnumerable<Controller_Action.Models.Product>

@{
    ViewBag.Title = "SearchProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchProduct</h2>
@using (Html.BeginForm("SearchProduct", "Product", FormMethod.Post, new { @class = "form-horizontal navbar-form", role = "form" }))
{
    <div class="input-group">
        @Html.TextBox("ProductName", null, new { @type = "text", @class = "form-control", @placeholder = "Producnt name..." })
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Product Details", "ProductDetail", new { id = item.ProductID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    if (Model.Count() == 0)
    {
        <label class="label label-danger">No data valid.</label>
    }
}