@model IEnumerable<string>
@Html.ActionLink("Home", "ListBean", "Bean", null, new { @class = "btn btn-block btn-default btn-lg" })
@foreach (var item in Model)
{
    @Html.RouteLink(item, new { controller = "Bean", action = "ListBean", category = item, page = 1 }, new { @class = "btn btn-block btn-default btn-lg" + (item == ViewBag.SelectedCategory ? "btn btn-default btn-lg btn-primary" : "") })
}